<h1 class="page-header"><%= t('category.page_header') %></h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= t('category.panel_heading') %>
        <%= link_to new_backoffice_category_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
            <i class="fa fa-plus"></i>
        <% end %>    
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th><%= t('category.page_header') %></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                        <tr>
                            <td><%= category.id %></td>
                            <td><%= category.description %></td>
                            <td>
                                <%= link_to edit_backoffice_category_path(category), class:"btn btn-primary btn-circle" do %>
                                        <i class="fa fa-pencil-square-o"></i>
                                <% end %>
                                
                                <%= link_to backoffice_category_path(category), method: :delete, 
                                    data: {confirm: t('messages.category.confirm', item: category.description)}, 
                                    class:"btn btn-danger btn-circle" do %>
                                    
                                    <i class="fa fa-minus"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
