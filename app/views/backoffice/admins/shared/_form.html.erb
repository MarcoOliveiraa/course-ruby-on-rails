<h1 class="page-header">Admin</h1>

<% if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
            <% @admin.errors.full_messages.each do |message| %>  
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <%= form_for([:backoffice, @admin]) do |f| %>
            <div class="col-lg-6">                        
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class:"form-control", placeholder:"Nome do administrador" %>
                    
                    <%= f.label :email %>
                    <%= f.text_field :email, class:"form-control", placeholder:"Email do administrador" %>
                    
                    <%= f.label :password %>
                    <%= f.password_field :password, class:"form-control", placeholder:"Senha" %>
                    
                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirmação da senha" %>
                    <br>                    
                    <%= f.label :role %>
                    <%= f.collection_radio_buttons :role, options_for_roles, :id, :description do |b| %>
                        <div class="radio">
                            <%= b.label {b.radio_button + b.text} %>
                        </div>
                    <% end %>
                </div>
                <button type="submit" class="btn btn-default">Salvar</button>
            </div>
        <% end %>
    </div>
    <!-- /.panel-body -->
</div>